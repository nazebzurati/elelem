{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Elelem",
  "version": "0.2.0-a1",
  "identifier": "net.fionix.elelem",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Elelem",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "files": {
          "/usr/share/net.fionix.elelem.metainfo.xml": "../misc/metainfo.xml"
        }
      }
    }
  }
}
